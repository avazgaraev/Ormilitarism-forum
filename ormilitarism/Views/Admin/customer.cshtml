@using ormilitarism.Models
@model List<customer>
@{
    ViewBag.Title = "customer";
    Layout = "~/Shared/admin.cshtml";
}


@Html.Action("basliqadlar")
@Html.Action("adminpart")
<div class="container-fluid">

    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800"></h1>
    <br />

    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">İzləyicilər</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-bordered" id="example" style="width:100%">
                    <thead>
                        <tr>
                            <th>Ad</th>
                            <th>Şifrə</th>
                            <th>Qosuldugu tarix</th>
                            <th>Status</th>
                            <th>Başlıq sayı</th>
                            <th>Post sayı</th>
                            <th>Like sayı</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>Ad</th>
                            <th>Şifrə</th>
                            <th>Qosuldugu tarix</th>
                            <th>Status</th>
                            <th>Başlıq sayı</th>
                            <th>Post sayı</th>
                            <th>Like sayı</th>


                        </tr>
                    </tfoot>
                    <tbody>
                        @foreach (var item in Model)
                        {

                            <tr>
                                <td>@item.customername </td>
                                <td>@item.customerpass</td>
                                <td>@item.registertime</td>
                                <td>@item.Status.statusad</td>
                                <td><a href="~/admin/basliqdetalcus/@item.customerid">@item.titlecount</a></td>
                                <td><a href="~/admin/postdetalcus/@item.customerid">@item.postcount</a></td>
                                <td><a href="~/admin/likedetalcus/@item.customerid">@item.likecount</a></td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>
<!-- /.container-fluid -->
<script src="https://code.jquery.com/jquery-3.5.1.js"></script>
<script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.11.5/js/dataTables.bootstrap4.min.js"></script>
<script>

    $(document).ready(function () {
        $('#example').DataTable();
    });
</script>


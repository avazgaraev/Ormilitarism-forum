@using ormilitarism.Models
@model List<postimgs>
@{
    ViewBag.Title = "postimglar";
    Layout = "~/Shared/admin.cshtml";
}


@Html.Action("basliqadlar")
@Html.Action("adminpart")

<div class="container-fluid">

    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800"></h1>
    <br />

    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Şəkilli postlar</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-bordered" id="example" style="width:100%">
                    <thead>
                        <tr>
                            <th>Şəkil</th>
                            <th>Post</th>
                            <th>Başlıq adı</th>
                            <th>Yazar</th>

                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>Şəkil</th>
                            <th>Post</th>
                            <th>Başlıq adı</th>
                            <th>Yazar</th>


                        </tr>
                    </tfoot>
                    <tbody>
                        @foreach (var item in Model)
                        {

                            <tr>
                                <td><img src="@item.imgname" style="width:50%" /></td>
                                <td><a href="~/admin/postdetal/@item.postid">@item.Post.postmezmun...</a></td>
                                <td>@item.Post.Title.titlename</td>
                                <td>@item.Post.Customer.customername</td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>
<!-- /.container-fluid -->
<script src="https://code.jquery.com/jquery-3.5.1.js"></script>
<script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.11.5/js/dataTables.bootstrap4.min.js"></script>
<script>

    $(document).ready(function () {
        $('#example').DataTable();
    });
</script>

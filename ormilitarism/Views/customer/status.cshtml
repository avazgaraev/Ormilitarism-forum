@model List<ormilitarism.Models.status>
@{
    ViewBag.Title = "statusindex";
    Layout = "~/Shared/admin.cshtml";
}

@Html.Action("basliqadlar", "admin")
@Html.Action("adminpart", "admin")
<div class="container-fluid">

    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800"></h1>
    <br />

    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">İzləyicilər</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <a href="~/customer/statusadd" class="btn btn-success">Elave et</a>
                <table class="table table-striped table-bordered" id="example" style="width:100%">
                    <thead>
                        <tr>
                            <th>Ad</th>
                            <th>Like sayı</th>
                            <th>Post sayı</th>
                            <th>Başlıq sayı</th>
                            <th><i class="fas fa-edit"></i></th>
                            <th><i class="fas fa-trash"></i></th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>Ad</th>
                            <th>Like sayı</th>
                            <th>Post sayı</th>
                            <th>Başlıq sayı</th>
                            <th><i class="fas fa-edit"></i></th>
                            <th><i class="fas fa-trash"></i></th>


                        </tr>
                    </tfoot>
                    <tbody>
                        @foreach (var item in Model)
                        {

                            <tr>
                                <td>@item.statusad </td>
                                <td><a href="">@item.likecount</a></td>
                                <td><a href="">@item.postcount</a></td>
                                <td><a href="">@item.titlecount</a></td>
                                <td><a href="~/customer/statusindex/@item.statusid">Duzelis</a></td>
                                <td><a href="~/customer/statusdel/@item.statusid">Silmek</a></td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>
<!-- /.container-fluid -->
<script src="https://code.jquery.com/jquery-3.5.1.js"></script>
<script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.11.5/js/dataTables.bootstrap4.min.js"></script>
<script>

    $(document).ready(function () {
        $('#example').DataTable();
    });
</script>